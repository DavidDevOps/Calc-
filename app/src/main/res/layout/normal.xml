<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#EEEEEE" >

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:background="#FFFFFF"
    android:id="@+id/relativeLayout">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/inputTV"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="25dp"
        android:editable="true"
        android:focusable="true"
        android:textColor="#000000"
        android:textAlignment="viewEnd"
        android:gravity="end"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/resultTV"
        android:layout_below="@+id/inputTV"
        android:layout_alignParentStart="true"
        android:textSize="30dp"
        android:editable="true"
        android:textColor="#000000"
        android:textAlignment="viewEnd" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="&lt;-"
        android:id="@+id/erase"
        android:textSize="30dp"
        android:background="#FFFFFF"
        android:textColor="#0017c2"
        android:layout_below="@+id/resultTV"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="32dp" />

</RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentStart="true"
        android:columnCount="4"
        android:rowCount="5"
        android:orientation="vertical">

        <Button
            android:layout_width="94dp"
            android:layout_height="60dp"
            android:text="C"
            android:id="@+id/eraseAll"
            android:background="#FFFFFF"
            android:textSize="30dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginTop="3dp"
            android:textColor="#0017c2"/>

        <Button
            android:layout_width="94dp"
            android:layout_height="60dp"
            android:text="÷"
            android:id="@+id/div"
            android:background="#FFFFFF"
            android:textSize="30dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="3dp"
            android:textColor="#0017c2"/>

        <Button
            android:layout_width="94dp"
            android:layout_height="60dp"
            android:text="7"
            android:id="@+id/num7"
            android:background="#FFFFFF"
            android:textSize="30dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginTop="3dp" />

        <Button
            android:layout_width="94dp"
            android:layout_height="60dp"
            android:text="8"
            android:id="@+id/num8"
            android:background="#FFFFFF"
            android:textSize="30dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="3dp" />

        <Button
            android:layout_width="94dp"
            android:layout_height="60dp"
            android:text="9"
            android:id="@+id/num9"
            android:background="#FFFFFF"
            android:textSize="30dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="3dp" />

        <Button
            android:layout_width="94dp"
            android:layout_height="60dp"
            android:text="×"
            android:id="@+id/mult"
            android:background="#FFFFFF"
            android:textSize="30dp"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="3dp"
            android:textColor="#0017c2"/>

        <Button
            android:layout_width="94dp"
            android:layout_height="60dp"
            android:text="4"
            android:id="@+id/num4"
            android:background="#FFFFFF"
            android:textSize="30dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginTop="3dp" />

        <Button
            android:layout_width="94dp"
            android:layout_height="60dp"
            android:text="5"
            android:id="@+id/num5"
            android:background="#FFFFFF"
            android:textSize="30dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="3dp" />

        <Button
            android:layout_width="94dp"
            android:layout_height="60dp"
            android:text="6"
            android:id="@+id/num6"
            android:background="#FFFFFF"
            android:textSize="30dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="3dp" />

        <Button
            android:layout_width="94dp"
            android:layout_height="60dp"
            android:text="－"
            android:id="@+id/min"
            android:textSize="30dp"
            android:background="#FFFFFF"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="3dp"
            android:textColor="#0017c2"/>

        <Button
            android:layout_width="94dp"
            android:layout_height="60dp"
            android:text="1"
            android:id="@+id/num1"
            android:background="#FFFFFF"
            android:textSize="30dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginTop="3dp" />

        <Button
            android:layout_width="94dp"
            android:layout_height="60dp"
            android:text="2"
            android:id="@+id/num2"
            android:background="#FFFFFF"
            android:textSize="30dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="3dp" />

        <Button
            android:layout_width="94dp"
            android:layout_height="60dp"
            android:text="3"
            android:id="@+id/num3"
            android:background="#FFFFFF"
            android:textSize="30dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="3dp" />

        <Button
            android:layout_width="94dp"
            android:layout_height="60dp"
            android:text="+"
            android:id="@+id/plus"
            android:background="#FFFFFF"
            android:textSize="30dp"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="3dp"
            android:textColor="#0017c2"/>

        <Button
            android:layout_width="94dp"
            android:layout_height="60dp"
            android:text="("
            android:id="@+id/leftBrace"
            android:background="#FFFFFF"
            android:textSize="30dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="3dp"
            android:textColor="#0017c2"/>

        <Button
            android:layout_width="94dp"
            android:layout_height="60dp"
            android:text=")"
            android:id="@+id/rightBrace"
            android:background="#FFFFFF"
            android:textSize="30dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="3dp"
            android:textColor="#0017c2"/>

        <Button
            android:layout_width="94dp"
            android:layout_height="60dp"
            android:text="0"
            android:id="@+id/num0"
            android:background="#FFFFFF"
            android:textSize="30dp"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_marginTop="3dp" />

        <Button
            android:layout_width="94dp"
            android:layout_height="60dp"
            android:text="."
            android:id="@+id/dot"
            android:background="#FFFFFF"
            android:textSize="30dp"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="3dp"
            android:textColor="#0017c2"/>

        <Button
            android:layout_width="94dp"
            android:layout_height="60dp"
            android:text="="
            android:id="@+id/equal"
            android:background="#FFFFFF"
            android:textSize="30dp"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="3dp"
            android:textColor="#0017c2"/>
    </GridLayout></RelativeLayout>