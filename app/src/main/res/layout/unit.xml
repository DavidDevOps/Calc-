<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#EEEEEE" >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:columnCount="4"
        android:rowCount="4"
        android:orientation="vertical"
        android:layout_marginTop="205dp">

        <Button
            android:layout_width="94dp"
            android:layout_height="60dp"
            android:text="9"
            android:id="@+id/num9"
            android:background="#FFFFFF"
            android:textSize="30dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="3dp" />

        <Button
            android:layout_width="94dp"
            android:layout_height="60dp"
            android:text="&lt;-"
            android:id="@+id/erase"
            android:background="#FFFFFF"
            android:textSize="30dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="3dp"
            android:textColor="#0017c2"/>

        <Button
            android:layout_width="94dp"
            android:layout_height="60dp"
            android:text="4"
            android:id="@+id/num4"
            android:background="#FFFFFF"
            android:textSize="30dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginTop="3dp" />

        <Button
            android:layout_width="94dp"
            android:layout_height="60dp"
            android:text="5"
            android:id="@+id/num5"
            android:background="#FFFFFF"
            android:textSize="30dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="3dp" />

        <Button
            android:layout_width="94dp"
            android:layout_height="60dp"
            android:text="6"
            android:id="@+id/num6"
            android:background="#FFFFFF"
            android:textSize="30dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="3dp" />

        <Button
            android:layout_width="94dp"
            android:layout_height="60dp"
            android:text="C"
            android:id="@+id/eraseAll"
            android:background="#FFFFFF"
            android:textSize="30dp"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="2dp"
            android:textColor="#0017c2"/>

        <Button
            android:layout_width="94dp"
            android:layout_height="60dp"
            android:text="1"
            android:id="@+id/num1"
            android:background="#FFFFFF"
            android:textSize="30dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginTop="3dp" />

        <Button
            android:layout_width="94dp"
            android:layout_height="60dp"
            android:text="2"
            android:id="@+id/num2"
            android:background="#FFFFFF"
            android:textSize="30dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="3dp" />

        <Button
            android:layout_width="94dp"
            android:layout_height="60dp"
            android:text="3"
            android:id="@+id/num3"
            android:background="#FFFFFF"
            android:textSize="30dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="3dp" />

        <Button
            android:layout_width="94dp"
            android:layout_height="60dp"
            android:text="="
            android:id="@+id/equal"
            android:background="#FFFFFF"
            android:textSize="30dp"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="3dp"
            android:textColor="#0017c2"/>

        <Button
            android:layout_width="94dp"
            android:layout_height="60dp"
            android:text="0"
            android:id="@+id/num0"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginTop="3dp"
            android:background="#FFFFFF"
            android:textSize="30dp" />

        <Button
            android:layout_width="94dp"
            android:layout_height="60dp"
            android:text="."
            android:id="@+id/dot"
            android:background="#FFFFFF"
            android:textSize="30dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="3dp"
            android:textColor="#0017c2"/>

        <Button
            android:layout_width="94dp"
            android:layout_height="60dp"
            android:text="7"
            android:id="@+id/num7"
            android:background="#FFFFFF"
            android:textSize="30dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginTop="3dp" />

        <Button
            android:layout_width="94dp"
            android:layout_height="60dp"
            android:text="8"
            android:id="@+id/num8"
            android:background="#FFFFFF"
            android:textSize="30dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="3dp" />

    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="변환 전 단위"
        android:id="@+id/X1"
        android:textSize="15dp"
        android:layout_marginStart="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="밀리미터"
        android:id="@+id/beforeChangeBT"
        android:layout_below="@+id/X1"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:textSize="25dp"
        android:background="#FFFFFF"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:id="@+id/beforeChangeET"
        android:layout_alignTop="@+id/beforeChangeBT"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:background="#FFFFFF"
        android:editable="false"
        android:focusable="true"
        android:gravity="center"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="변환 후 단위"
        android:id="@+id/X2"
        android:layout_below="@+id/beforeChangeBT"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:textSize="15dp" />

    <Button
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="밀리미터"
        android:id="@+id/afterChangeBT"
        android:layout_marginLeft="15dp"
        android:textSize="25dp"
        android:background="#FFFFFF"
        android:layout_below="@+id/X2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:id="@+id/afterChangeET"
        android:layout_marginRight="15dp"
        android:background="#FFFFFF"
        android:layout_alignTop="@+id/afterChangeBT"
        android:layout_alignStart="@+id/beforeChangeET"
        android:editable="false"
        android:gravity="center"
        android:textSize="15dp"/>


</RelativeLayout>